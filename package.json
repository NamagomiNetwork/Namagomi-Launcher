{
  "name": "namagomi-launcher",
  "homepage": ".",
  "productName": "",
  "description": "",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "predev": "rimraf dist",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "publish-win-x64": "npm run build && electron-builder --win --x64",
    "publish-mac-x64": "npm run build && electron-builder --mac --x64",
    "publish-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "uuidjs": "^4.2.11"
  },
  "devDependencies": {
    "@types/node": "17.0.34",
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5",
    "buffer": "^6.0.3",
    "class-transformer": "^0.5.1",
    "cross-env": "7.0.3",
    "crypto-browserify": "^3.12.0",
    "css-loader": "6.7.1",
    "electron": "19.0.1",
    "electron-builder": "^23.0.3",
    "electron-dl": "3.3.1",
    "electron-fetch": "^1.7.4",
    "electron-reload": "latest",
    "electron-search-devtools": "1.8.3",
    "fp-ts": "^2.12.1",
    "fs-extra": "^10.1.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.6.0",
    "npm-run-all": "4.1.5",
    "path-browserify": "^1.0.1",
    "rimraf": "3.0.2",
    "stream-browserify": "^3.0.0",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.0",
    "typescript": "4.7.2",
    "uuid-js": "^0.7.5",
    "wait-on": "6.0.1",
    "webpack": "5.72.1",
    "webpack-cli": "4.9.2"
  },
  "build": {
    "extends": null,
    "appId": "com.namagomi.launcher",
    "directories": {
      "output": "assets/installer"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "icon": "assets/resource/namagomi400x400.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/resource/namagomi400x400.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
